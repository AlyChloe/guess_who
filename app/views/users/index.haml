        %input#password{:name => "password", :type => "password"}
      #lower
        %p#signup
          New User?
          %a{:href => "sign-up.haml"} Sign Up!
        %input#login{:type => "submit", :value => "Login"}
  =javascript_include_tag "vendor.min.js"
  =javascript_include_tag "app.js"
