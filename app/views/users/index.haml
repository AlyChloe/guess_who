!!! 5
%html(lang='en')
  %head
    %meta(charset='UTF-8')
    %meta(content='width=device-width, initial-scale=1' name='viewport')
    %title Mr. Potato Who?
    =stylesheet_link_tag "application.css"
  %body
    #container
      %form
        %label{:for => "username"} Username:
        %input#username{:name => "username", :type => "text"}
